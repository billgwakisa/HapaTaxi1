<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:background="#212121">

    <EditText
        android:id="@+id/etUserLocation"
        android:text="Your Location"
        android:inputType="text"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF" />

    <Button
        style="@style/AppTheme.Button.HapaTaxiRegular"
        android:id="@+id/btnGetTaxis"
        android:text="Get Taxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="OR"
        android:textColor="#FFF"
        android:gravity="center_horizontal"/>

    <Button
        style="@style/AppTheme.Button.HapaTaxiRegular"
        android:id="@+id/btnSeeAllTaxis"
        android:text="See All Taxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="gotoAllTaxis" />

</LinearLayout>
