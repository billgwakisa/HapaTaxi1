<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:background="#212121">

    <ImageView
        android:layout_width="fill_parent"
        android:contentDescription="Hapa Taxi Logo"
        android:paddingTop="80dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_logo" />


    <Button
        style="@style/AppTheme.Button.HapaTaxiRegular"
        android:id="@+id/btnSignUp"
        android:text="Sign up with Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF9800"
        android:onClick="goToRegister" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textColor="#FFF"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:textSize="13sp"/>

    <Button
        style="@style/AppTheme.Button.GooglePlus"
        android:id="@+id/btnSignUpGP"
        android:text="Sign up with Google+"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_google_plus"
        android:drawableStart="@drawable/ic_google_plus"
        android:paddingLeft="10dp"/>

    <Button
        style="@style/AppTheme.Button.Facebook"
        android:id="@+id/btnSignUpFB"
        android:text="Sign up with Facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_facebook_white"
        android:drawableStart="@drawable/ic_facebook_white"
        android:paddingLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="bottom|center">

        <Button
            android:id="@+id/btnTryUsOut"
            android:text="Try Us Out"
            android:gravity="start|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#FF9800"
            android:background="@android:color/transparent"
            android:onClick="goToHomeScreen" />

        <Button
            android:id="@+id/btnLogin"
            android:text="Log In"
            android:gravity="end|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#FF9800"
            android:background="@android:color/transparent"
            android:onClick="goToLogin" />
    </LinearLayout>


</LinearLayout>